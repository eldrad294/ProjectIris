@model IEnumerable<ProjectIris.Models.purchases_log>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="side-body">
        <div class="page-title">
            <span class="title">Accounts Log Table</span>
            <div class="description">Accounts Log Data Table</div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="title">Table</div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.dateofpurchase)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.employeeid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.amount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.accountnumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.message)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.dateofpurchase)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.employeeid)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.accountnumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.message)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
