@model ProjectIris.Models.bank

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <div class="side-body">
        <div class="row">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="title">Delete Bank Details</div>
                        </div>
                    </div>
                    <div class="card-body">

                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.bankname)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.bankname)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.swiftcode)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.swiftcode)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.branchcode)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.branchcode)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-default" /> |
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
